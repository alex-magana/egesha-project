<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro"
    android:orientation="horizontal"
    android:paddingRight="20dp" >
    
	<ImageView 
        android:id="@+id/myimage"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher2"/>
    
    <RelativeLayout 
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvname"
            android:text="Small"
            android:textSize="18dp"/>
        
        <TextView
            android:id="@+id/tvcurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvname"
            android:layout_marginRight="10dp"
            android:text="KSHS:"
            android:textSize="15dp" />
        
        <TextView
            android:id="@+id/tvrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvname"
            android:layout_toEndOf="@id/tvcurrency"
            android:text="Small"
            android:textSize="15dp" />
        
        <TextView
            android:id="@+id/tvtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvcurrency"
            android:layout_marginRight="10dp"
            android:text="OPEN:"
            android:textSize="15dp" />
        
        <TextView
            android:id="@+id/tvophr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvcurrency"
            android:layout_toEndOf="@id/tvtime"
            android:layout_marginRight="10dp"
            android:text="Small"
            android:textSize="15dp" />
        
        <TextView
            android:id="@+id/tvupto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvcurrency"
            android:layout_toEndOf="@id/tvophr"
            android:layout_marginRight="10dp"
            android:text="-"
            android:textSize="15dp" />
        
        <TextView
            android:id="@+id/tvclhr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_below="@id/tvcurrency"
            android:layout_toEndOf="@id/tvupto"
            android:layout_marginRight="10dp"
            android:text="Small"
            android:textSize="15dp" />
        
         <TextView
            android:id="@+id/tvavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvcurrency"
            android:layout_toEndOf="@id/tvclhr"
            android:text="Small"
            android:textSize="15dp" 
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/tvlat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvtime"
            android:text="Small"
            android:textSize="10dp"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/tvlng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvlat"
            android:text="Small"
            android:textSize="10dp"
            android:visibility="gone" />
        
    </RelativeLayout>

</LinearLayout>
